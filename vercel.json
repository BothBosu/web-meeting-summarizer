{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/(.*)"
    }
  ],
  "builds": [
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ]
}